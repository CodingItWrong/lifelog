<p style="color: green"><%= notice %></p>

<h1>Lifelog</h1>

<div id="entries">
  <% @entries.each do |entry| %>
    <div id="<%= dom_id entry %>">
      <%= link_to entry.log_time, entry %>
      -
      <% if entry.location_name.present? %>
        <%= entry.location_name %>
      <% else %>
        <%= entry.lat_lng %>
      <% end %>
    </div>
  <% end %>
</div>

<%= link_to "New entry", new_entry_path %>
